<phpunit
        bootstrap="./vendor/autoload.php"
        >
    <filter>
        <whitelist>
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
        <log type="coverage-html" target="build/logs/clover.html"/>
    </logging>
</phpunit>